<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetalleVacanteActivity"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            >

            <ImageView
                android:id="@+id/imgVw_empresaDetalle"
                android:layout_width="match_parent"
                android:layout_height="350sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txtVw_nomEmpresaDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:paddingTop="5dp"
                    android:paddingStart="10dp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtVw_razonSocial"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="@string/superMercado"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/numero_empresa"
                        android:paddingStart="10dp"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txtVw_numEmpresaDetalle"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_numEmpresa"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textSize="15sp"
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/domicilio_empresa"
                        android:paddingStart="10dp"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/txtVw_domicilioEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/txt_domicilioEmpresa"
                        android:paddingStart="5dp"
                        android:textSize="12sp"
                        />

                </LinearLayout>




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_viewLineaContac_1"
                android:background="@color/colorPrimary"
                android:layout_marginTop="5dp"
                />

            <!--aqui-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:paddingEnd="25sp"
                android:paddingStart="25sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_titleVacante"
                        android:paddingStart="5dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txtVw_nomVacanteDetalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_vacante"
                        android:paddingStart="5dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtVw_descripcionVacant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descripcion"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    android:layout_marginTop="15dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_Habilidades"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:id="@+id/txtVw_habilidades"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_habilid"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="5dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_requisitos"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:id="@+id/txtVw_requisitos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_requisit"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="5dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_tbn_borde_procesos"
                    android:layout_marginTop="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_sueldo"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:id="@+id/txtVw_salario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_salario"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_horario"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:id="@+id/txtVw_turnoDetalle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_horarioJob"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"
                            />
                    </LinearLayout>


                </LinearLayout>



                <Button
                    android:id="@+id/btnVw_postulateDetalle"
                    android:layout_width="@dimen/width_btn_login_250"
                    android:layout_height="@dimen/width_btn_modify_40"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/marginStart_btn_perfil_10"
                    android:layout_marginBottom="@dimen/marginTop_Perfil_30"
                    android:background="@drawable/selecter_btn_login"
                    android:shadowRadius="15"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowColor="@android:color/black"
                    android:text="@string/btn_postulate"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_Size_txtContacto_17" />

            </LinearLayout><!--aqui-->


        </LinearLayout>

    </ScrollView>

</LinearLayout>