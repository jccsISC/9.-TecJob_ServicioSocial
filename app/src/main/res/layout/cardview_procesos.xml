<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_procesos"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/CornerRadius_cardview_4"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <!--con centerCrop la imagen no se distorciona-->
            <ImageView
                android:id="@+id/imageView_Procesos"
                android:layout_width="125dp"
                android:layout_height="94dp"
                android:background="@drawable/sams"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtVw_nomEmpresa_CardProcesos"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginStart="5dp"
                        android:text="@string/textView_nom_Empresa"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtVw_txto_vacante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_titleVacante"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/txtVw_nomVacante_proceso"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/nomVacane"
                        android:textSize="14dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:layout_gravity="end"
                >
                <ImageView
                    android:id="@+id/imageView_Aplicado"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/verified"
                    />

                <ImageView
                    android:id="@+id/imageView_barraGris"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/barragris"
                    />


                <ImageView
                    android:id="@+id/imageView_Visto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/verified"
                    />
                <ImageView
                    android:id="@+id/imageView_barraGris2"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/barragris"
                    />

                <ImageView
                    android:id="@+id/imageView_EnProceso"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/correct"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postulado"
                    android:textSize="12dp"
                    android:layout_marginRight="38dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En revisiÃ³n"
                    android:textSize="12dp"
                    android:layout_marginRight="40dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceptado"
                    android:textSize="12dp"
                    />

            </LinearLayout>



        </LinearLayout>


    </FrameLayout>



</androidx.cardview.widget.CardView>